<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <PublishChromeDriver>true</PublishChromeDriver>
    <PackOnBuild>true</PackOnBuild>
    <PackageId>VH.AcceptanceTests.Tests</PackageId>
    <Authors>Video Hearings</Authors>
    <Description>Consolidated package with Specflow support, common configuration loading, Webdriver Sauce labs and Test setup common hooks and common steps.</Description>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="appsettings.json" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Features\AdminWebsite\SigningIn.feature">
      <Generator></Generator>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.15.1" />
    <PackageReference Include="SpecFlow" Version="3.0.225" />
    <PackageReference Include="SpecFlow.NUnit" Version="3.0.225" />
    <PackageReference Include="SpecFlow.Tools.MsBuild.Generation" Version="3.0.225" />
    <PackageReference Include="SpecRun.Runner" Version="3.0.391" />
    <PackageReference Include="Coypu" Version="3.1.1" />
    <PackageReference Include="Coypu.NUnit" Version="3.0.1" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.4.0" />
        <PackageReference Include="NuGet.Build.Packaging" Version="0.2.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="IntegrationTests\" />
    <Folder Include="SpecflowTests\AdminWebsite\" />
    <Folder Include="SpecflowTests\ServiceWebsite\" />
    <Folder Include="SpecflowTests\Common\" />
    <Folder Include="SpecflowTests\" />
    <Folder Include="SpecflowTests\VideoWebsite\" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="TechTalk.SpecRun.Common.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\AdminWebsite\Resources\adminwebsite.appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\AdminWebsite\Resources\adminwebsite.chrome.desktop.runsettings.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\AdminWebsite\Resources\adminwebsite.edge.desktop.runsettings.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\AdminWebsite\Resources\adminwebsite.firefox.desktop.runsettings.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\AdminWebsite\Resources\adminwebsite.safari.desktop.runsettings.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\AdminWebsite\Resources\adminwebsite.useraccounts.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\ServiceWebsite\Resources\servicewebsite.appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\ServiceWebsite\Resources\servicewebsite.edge.desktop.runsettings.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\ServiceWebsite\Resources\servicewebsite.firefox.desktop.runsettings.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\ServiceWebsite\Resources\servicewebsite.safari.desktop.runsettings.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\ServiceWebsite\Resources\servicewebsite.useraccounts.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\VideoWebsite\Resources\videowebsite.appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SpecflowTests\VideoWebsite\Resources\videowebsite.useraccounts.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <SpecFlowFeatureFiles Update="Features\ServiceWebsite\SignIn.feature">
      <Visible>True</Visible>
      <Generator></Generator>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="SpecflowTests\AdminWebsite\Features\SignIn.feature">
      <Visible>False</Visible>
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>SignIn.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="SpecflowTests\ServiceWebsite\Features\SignIn.feature">
      <Visible>False</Visible>
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>SignIn.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\AcceptanceTests.Configuration\AcceptanceTests.Configuration.csproj" />
    <ProjectReference Include="..\AcceptanceTests.Driver\AcceptanceTests.Driver.csproj" />
    <ProjectReference Include="..\AcceptanceTests.Model\AcceptanceTests.Model.csproj" />
    <ProjectReference Include="..\AcceptanceTests.PageObject\AcceptanceTests.PageObject.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="SpecflowTests\AdminWebsite\Features\SignIn.feature.cs">
      <DependentUpon>SignIn.feature</DependentUpon>
    </Compile>
    <Compile Update="SpecflowTests\ServiceWebsite\Features\SignIn.feature.cs">
      <DependentUpon>SignIn.feature</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
